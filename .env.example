# OFO Development Website Environment Variables
# Copy this file to .env and fill in the appropriate values

# Node.js Environment
# Options: development, production
NODE_ENV=development

# Server Configuration
PORT=3000

# Email Configuration
# SMTP server settings for sending emails
MAIL_HOST=smtp.example.com
MAIL_USER=your-email@example.com
MAIL_PASS=your-email-password
MAIL_PORT=587
MAIL_FROM=your-email@example.com
MAIL_SECURE=false  # true for 465, false for other ports

# Logging Configuration
# Log levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Security Configuration
# Set to true to enable additional security features in production
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
# Google Analytics or other analytics provider ID
ANALYTICS_ID=UA-XXXXXXXXX-X
